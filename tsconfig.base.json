{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "baseUrl": ".",
    "outDir": "out-tsc",
    "emitDeclarationOnly": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "Node16",
    "moduleResolution": "node16",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "paths": {
      "@lib/observability": ["packages/observability/src/index.ts"],
      "@lib/observability/*": ["packages/observability/src/lib/*"],
      "@lib/config": ["packages/config/src/index.ts"],
      "@lib/config/*": ["packages/config/src/lib/*"],
      "@lib/shared": ["packages/shared/src/index.ts"],
      "@lib/utils": ["packages/utils/src/index.ts"]
    }
  }
}
